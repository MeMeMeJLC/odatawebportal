@model refwebportal.Game

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GameDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GameDateTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.GameTeams)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Team Name</th>
                    <th>Team Colour</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.GameTeams)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Team.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Team.Colour)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "../GameTeam/Details", new { id = item.Id})
                        </td>
                    </tr>
                }
                </table>
                </dd>
            </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to Game Team List", "Index")

</p>
